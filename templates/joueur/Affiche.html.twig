{% extends 'base-back.html.twig' %}
{% block content %}
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>


    <div class="row" style="width: 100%;">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Liste Des Joueurs</h4>
                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nom Joueur</th>
                            <th>Prenom Joueur</th>
                            <th>Age</th>
                            <th>Position</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr {% for j in joueur %}>
                            <td>{{ j.id }}</td>
                            <td>{{ j.nomJoueur }}</td>
                            <td>{{ j.prenomJoueur }}</td>
                            <td>{{ j.age }}</td>
                            <td>{{ j.position }}</td>
                            <td><a href="{{ path('update',{'id':j.id}) }}"><i class="ri-pencil-fill"></i></a>
                                <a href="{{ path('delete',{'id':j.id}) }}"><i class="ri-delete-bin-fill"></i></a>
                            </td>
                        </tr {% endfor %}>
                        </tbody>
                    </table>
                </div>
            </div>
        </div> <!-- end col -->
    </div> <!-- end row -->
    <script>
        $('#datatable-buttons').DataTable();
    </script>
{% endblock %}

