{% extends 'base-back.html.twig' %}
{% block content %}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Liste Des Stades</h4>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom </th>
                        <th>Adresse </th>
                        <th>Capacite</th>
                        <th>details</th>
                        <th>update</th>
                        <th>delete</th>
                       
                    </tr>
                </thead>
                <tbody>
                    <tr {% for s in stade %}>
                        <td>{{ s.id }}</td>
                        <td>{{ s.nom }}</td>
                        <td>{{ s.adresse }}</td>
                        <td>{{ s.capacite }}</td>
                        <td><a href>details</a></td>
                        <td><a href="{{ path('UpdateStade',{'id':s.id})}}">Update</a></td>
                        <td><a href="{{ path('deleteStade',{'id':s.id})}}">Delete</a></td>
                    </tr{% endfor %}>
                    <li><a href="http://127.0.0.1:8000/stade/AddStade">Add Stade</a></li>

                </tbody>
            </table>
        </div>
    </div>
</div> <!-- end col -->
</div> <!-- end row -->
{% endblock %}