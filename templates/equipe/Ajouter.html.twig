{% extends 'base-back.html.twig' %}
{% block user %}
    {{ app.user.username }}
{% endblock %}
{% block content %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}
    <div class="row " style="width: 100%;">
        <div class="col-12">
            <div class="card">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="#">Equipe</a></li>
                        <li class="breadcrumb-item active">Ajouter</li>
                    </ol>
                </div>
                <div class="card-body">
                    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.nom_equipe) }}</label>
                        <div class="col-md-10">
                            <input class="form-control" {{ form_widget(form.nom_equipe) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-date-input" class="col-md-2 col-form-label">{{ form_label(form.date_creation) }}</label>
                        <div class="col-md-10">
                            {{ form_widget(form.date_creation) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.nom_entreneur) }}</label>
                        <div class="col-md-10">
                            <input class="form-control" {{ form_widget(form.nom_entreneur) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div> <!-- end col -->
        </div>
    </div>
{% endblock %}



